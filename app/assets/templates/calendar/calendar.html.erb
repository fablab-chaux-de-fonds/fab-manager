<section class="heading b-b">
  <div class="row no-gutter">
    <div class="col-xs-4 col-sm-2 col-md-1">
      <section class="heading-btn">
        <a href="#" ng-click="backPrevLocation($event)">
          <i class="fa fa-long-arrow-left "></i>
        </a>
      </section>
    </div>
    <div class="col-xs-8 col-sm-10 col-md-8 b-l b-r-md hide-b-r-lg">
      <section class="heading-title">
        <h1 class="m-l-xs" translate="translate">{{ 'calendar.calendar' }}</h1>
        <div class="heading-actions visible-xs m-r">
          <button type="button" class="btn btn-default" ng-click="openFilterAside()">
            <span class="fa fa-filter"></span>
          </button>
        </div>
      </section>
    </div>
    <div class="col-xs-12 col-sm-12 col-md-3 b-t hide-b-md hidden-lg hidden-xs">
      <div class="heading-actions wrapper">
        <button type="button" class="btn btn-default m-t m-b" ng-click="openFilterAside()">
          <span class="fa fa-filter"></span>
          {{ 'calendar.filter_calendar' | translate }}
        </button>
      </div>
    </div>
  </div>
</section>

<section class="row m-lg">
  <div class="col-lg-12">
    <p>
      <span class="text-green-light">■■
      </span><span class="text-red">OpenLab :
      </span>ouvert à tous, demande de renseignements possible</p>
    <p>
      <span class="text-red-light">■■
      </span><span class="text-red">ExpertLab :
      </span>ouvert aux personnes autonomes sur les machines</p>
  </div>
</section>

<div class="row no-gutter calendar-container">
  <div class="col-xs-12 col-sm-12 col-md-12 col-lg-9 calendar-expander">
    <div ui-calendar="calendarConfig" ng-model="eventSources" calendar="calendar" class="public-calendar m"></div>
  </div>
  <div class="col-lg-3 hidden-md hidden-sm hidden-xs">
    <div class="widget panel b-a m m-t-lg">
      <div class="panel-heading b-b small">
        <h3 translate="translate">{{ 'calendar.filter_calendar' }}</h3>
      </div>
      <div class="widget-content no-bg auto wrapper calendar-filter">
        <ng-include src="'<%= asset_path 'calendar/filter.html' %>'"></ng-include>
      </div>
    </div>
  </div>
</div>
<script type="text/ng-template" id="filterAside.html">
  <div class="widget">
    <div class="modal-header">
      <button type="button" class="close" ng-click="close($event)">
        <span>&times;</span></button>
      <h1 class="modal-title" translate="translate">{{ 'calendar.filter_calendar' }}</h1>
    </div>
    <div class="modal-body widget-content calendar-filter calendar-filter-aside">
      <ng-include src="'<%= asset_path 'calendar/filter.html' %>'"></ng-include>
    </div>
  </div>
</script>
