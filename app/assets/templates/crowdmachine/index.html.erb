<section class="heading b-b">
  <div class="row no-gutter">
    <div class="col-xs-2 col-sm-2 col-md-1">
      <section class="heading-btn">
        <a href="#" ng-click="backPrevLocation($event)">
          <i class="fa fa-long-arrow-left "></i>
        </a>
      </section>
    </div>
    <div class="col-xs-10 col-sm-10 col-md-8 b-l b-r-md hide-b-r-lg">
      <section class="heading-title">
        <h1>{{ 'crowdmachine.crowdmachine' | translate}}</h1>
      </section>
    </div>
  </div>
</section>

<section class="row no-gutter">
  <!-- <div class="crowdmachine-card wrapper-lg"> -->
  <div class="wrapper-lg">
    <div ng-repeat="i in data" class="crowdmachine-repeat col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card crowdmachine-card">
        <div class="img-crowdmachine">
          <%= image_tag("/assets/crowdmachine/{{ i.id }}_800x800.png", class: 'img-responsive img-crowdmachine-src') %>
          <div class='overlay'>
            <div class='overlay-layer'></div>
            <div class="btn-overlay">
              <a href="#" class="btn btn-primary btn-crowdmachine">
                <i class="fa fa-info-circle"></i> {{ 'crowdmachine.info' | translate}}
              </a>
              <a href="mailto:info@fablab-chaux-de-fonds.ch?subject=[{{ 'crowdmachine.crowdmachine' | translate}}] - {{ i.title }}" class="btn btn-primary btn-crowdmachine">
                <i class="fa fa-envelope"></i> {{ 'crowdmachine.contribute' | translate}}
              </a>
            </div>
          </div>
        </div>
          <div class="card-body">
          <p class="text-center">{{ i.title }}</p>
        </div>
      </div>
    </div>
  </div>
</section>
